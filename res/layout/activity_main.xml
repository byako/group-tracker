<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.byako.group_tracker.MainActivity" >

    <Button
        android:id="@+id/startButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stopButtonId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Start"
        android:onClick="onStartButtonClicked" />

    <Button
        android:id="@+id/stopButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Stop"
        android:onClick="onStopButtonClicked" />

    <TextView
        android:id="@+id/statusViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopButtonId"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="78dp"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>